<% layout('layouts/boilerplate')%>
<!-- Order list -->
<div class="container mt-5" style="min-height: calc(100vh - 150px); margin-bottom: 80px;">
    <h2 class="mb-4">My Orders</h2>
    
    <% if(orders && orders.length > 0) { %>
        <div class="row">
            <% orders.forEach(order => { %>
                <p>index.ejs</p>
                <div class="col-md-12 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0">Order #<%= order._id %></h5>
                                <span class="badge bg-<%= order.status === 'Pending' ? 'warning' : 'success' %>">
                                    <%= order.status %>
                                </span>
                            </div>
                            <p class="text-muted mb-2">Ordered on: <%= order.createdAt.toLocaleDateString() %></p>
                            <p class="mb-2">Total Amount: â‚¹<%= order.totalAmount %></p>
                            <div class="d-flex gap-2">
                                <a href="/orders/<%= order._id %>" class="btn btn-primary btn-sm">View Details</a>
                                <a href="/orders/<%= order._id %>/bill" class="btn btn-info btn-sm">View Bill</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info">No orders found</div>
        <a href="/plants" class="btn btn-primary">Start Shopping</a>
    <% } %>
</div>